{
  "compilerOptions": {
    "outDir": "./dist/",
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2018",
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "strict": true,
    "types": [],
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "es2019"]
  },
  "include": [
    "src/**/*",
    // Don't check the types in the eslint config for now
    // "eslint.*.mjs",
  ],
  "exclude": [
    "*.json"
  ]
}
