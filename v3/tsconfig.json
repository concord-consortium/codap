{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2018",
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "strict": true,
    "types": [],
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "es2018"],
    "paths": {
      "mobx-state-tree": ["node_modules/@concord-consortium/mobx-state-tree/dist"]
    }
  },
  "include": [
    "./src/**/*",
    ".eslintrc*.cjs",
    // cypress.config.ts will need another pass before being added
    // "*.config.ts",
    "*.config.js",
    "why-did-you-render.ts"
  ]
}
