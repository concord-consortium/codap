{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2018",
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "strict": true,
    "types": [],
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "es2019"],
    "paths": {
      "@codemirror/autocomplete": ["./node_modules/@codemirror/autocomplete"],
      "@codemirror/state": ["./node_modules/@codemirror/state"],
      "@codemirror/view": ["./node_modules/@codemirror/view"],
      "mobx-state-tree": ["./node_modules/@concord-consortium/mobx-state-tree/dist"]
    }
  },
  "include": [
    "src/**/*",
    "eslint.*.mjs",
    // cypress.config.ts will need another pass before being added
    // "*.config.ts",
    "*.config.js",
    "why-did-you-render.ts"
  ],
  "exclude": [
    "src/**/*.v2.ts",
    "*.grammar",
    "*.json"
  ]
}
